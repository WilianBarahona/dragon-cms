<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Dragon CMS</title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="/admin/img/favicon.ico" type="image/x-icon">

  <!-- Styles vendor -->
  <link href="/admin/vendor/magnific-popup/css/magnific-popup.css" rel="stylesheet">
  <link href="/admin/vendor/font-awesome/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="/admin/vendor/fonts/font-nunito.css" rel="stylesheet">
  <link rel="stylesheet" href="/admin/vendor/jquery-confirm/css/jquery-confirm.css">

  <!-- Sytle  -->
  <link href="/admin/css/style.min.css" rel="stylesheet">
</head>

<body>
  
 <div class="loader"></div>
 <div id="wrapper">
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        <!-- Logo -->
      <a class="sidebar-brand d-flex align-items-center justify-content-center" onclick="dashboard()">
        <div class="sidebar-brand-icon">
            <i class="fas fa-dragon color-primary dragon"></i>
        </div>
        <div class="sidebar-brand-text ml-1">
          <span class="color-white">Dragon</span><span class="color-primary">CMS</span></div>
      </a>

      <hr class="sidebar-divider my-0">
      <!-- Item Simple -->
      <li class="nav-item">
        <a onclick="dashboard()" class="nav-link">
          <i class="fas fa-home fa-fw"></i>
          <span><b>Inicio</b></span></a>
      </li>

      <hr class="sidebar-divider">
      <!-- Encabezado -->
      <div class="sidebar-heading">
        Sitio Web
      </div>

      <!-- Item collapsado-->
      <li class="nav-item">
        <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapse-item-1" aria-expanded="true" aria-controls="collapseTwo">
          <i class="fas fa-pen fa-fw"></i>
          <span>Sitio Web</span>
        </a>
        <div id="collapse-item-1" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
          <div class="bg-white py-2 collapse-inner rounded">
            <h6 class="collapse-header">Opciones:</h6>
            <a onclick="pages()" class="collapse-item">Paginas</a>
            <a onclick="entries()" class="collapse-item">Entradas</a>
            <a onclick="category()" class="collapse-item">Categorias entradas</a>
            <a onclick="comments()" class="collapse-item">Comentarios</a>
          </div>
        </div>
      </li>
      <hr class="sidebar-divider d-none d-md-block">

        <!-- Encabezado -->
      <div class="sidebar-heading">
        Gestion
      </div>

      <!-- Item collapsado-->
      <li class="nav-item">
        <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapse-item-2" aria-expanded="true" aria-controls="collapseTwo">
          <i class="fas fa-user-cog fa-fw"></i>
          <span>Administracion</span>
        </a>
        <div id="collapse-item-2" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
          <div class="bg-white py-2 collapse-inner rounded">
            <h6 class="collapse-header">Opciones:</h6>
            <a onclick="filesBank()" class="collapse-item">Banco de archivos</a>
            <a onclick="menus()" class="collapse-item">Menus</a>
            <a onclick="breadcrumbk()" class="collapse-item">Breadcrumbs</a>
            <a onclick="themes()" class="collapse-item">Temas</a>
            <a onclick="users()" class="collapse-item">Usuarios</a>
            <a onclick="roles()" class="collapse-item">Roles</a>
          </div>
        </div>
      </li>
      <hr class="sidebar-divider d-none d-md-block">

      <!-- Encabezado -->
      <div class="sidebar-heading">
        Ajustes
      </div>

      <!-- Item collapsado-->
      <li class="nav-item">
        <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapse-item-3" aria-expanded="true" aria-controls="collapseTwo">
          <i class="fas fa-fw fa-cog"></i>
          <span>Configuraciones</span>
        </a>
        <div id="collapse-item-3" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
          <div class="bg-white py-2 collapse-inner rounded">
            <h6 class="collapse-header">Opciones:</h6>
            <a onclick="siteSettings()" class="collapse-item">Configuracion del sitio</a>
          </div>
        </div>
      </li>
      <hr class="sidebar-divider d-none d-md-block">


      <!-- Button para ocultar o mostrar el SideBar) -->
      <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
      </div>

    </ul>
    <!-- Fin del Sidebar -->

   <!-- Contenido -->
   <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
          <!-- Inicio del Navbar -->
          <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
              <i class="fa fa-bars"></i>
            </button>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <!-- Incluir la clase d-none en caso de querer ocultar el nombre para pantallas <= md -->
                  <span id="user-name" class="mr-2 d-lg-inline text-gray-600 small"></span>
                  <img class="img-profile rounded-circle" src="/admin/img/user.jpg">
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                      <a class="dropdown-item">
                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                        Perfil
                      </a>
                      <a class="dropdown-item">
                        <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                        Configuraciones
                      </a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" onclick="logoutUser()">
                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                        Cerrar sesion
                      </a>
                </div>
              </li>
            </ul>
          </nav>
          <!-- Fin del NavBar -->

       <!-- Container ==> El contenido se llenara dinamicamente -->
       <div id="container" class="container-fluid">
            <div class="row entries">
                <div class="col-12 mb-1">
                    <h2>Nueva entrada</h2>
                    <hr>
                </div>
                <div class="col-12 mb-4">
                    <div class="row">
                      <div class="col-6 mb-2">
                          <input id="txt-title-entry" type="text" class="form-control font-09rem" placeholder="Titulo de la entrada">
                          <div class="text-left invalid-feedback">Titulo vacio</div>
                      </div>
                      <div class="col-6 mb-2">
                          <select id="slc-autor" class="form-control font-09rem">
                            <option value="0">Seleccione un autor</option>
                          </select>
                          <div class="text-left invalid-feedback">Seleccione un autor</div>
                      </div>
                      <div class="col-6 mb-2">
                        <input type="text" id="txt-img" class="form-control font-09rem" placeholder="Codigo de imagen representativa">
                        <div class="text-left invalid-feedback">Imagen vacia</div>
                      </div>
                      <div class="col-6 mb-2">
                          <select id="slc-category" class="form-control font-09rem">
                            <option value="0">Seleccione una categoria</option>
                          </select>
                          <div class="text-left invalid-feedback">Seleccione una categoria</div>                      
                      </div>
                       <div class="col-6 mb-2">
                          <select id="slc-comentario" class="form-control font-09rem">
                              <option value="0">¿Permite comentarios?</option>
                              <option value="1">Si</option>
                              <option value="2">No</option>
                          </select>    
                          <div class="text-left invalid-feedback">Seleccione una opción</div>                  
                      </div>
                      <div class="col-12 mt-2">
                          <button id="btn-create-entry" type="button" class="btn btn-success">Agregar entrada</button>
                      </div>
                    </div>
                </div>
                <div class="col-12 mb-5">
                    <textarea  id="editor-entry" name="editor-entry"></textarea>
                </div>
            </div>
       </div>
       
     </div>
     <!-- Fin Contenido -->
    
   </div>
   <!-- Fin del contenido del wrapper-->

 </div>
 <!-- Fin del wrapper -->

 <!-- Script Vendor -->
 <script src="/admin/vendor/jquery/jquery.min.js"></script>
 <script src="/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
 <script src="/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
 <script src="/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
 <script src="/admin/vendor/jquery-confirm/js/jquery-confirm.js"></script>


<!-- CKEditor -->
<script src="/admin/vendor/ckeditor/ckeditor.js"></script>

 <!-- Script -->
 <script src="/admin/js/controllers/sidebar.js"></script>
 <script src="/admin/js/controllers/new-entry.js"></script>
 <script src="/admin/js/global.js"></script>

</body>

</html>

 